#!/usr/bin/env node
'use strict';

// MODULES //

var join = require( 'path' ).join;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var CLI = require( '@stdlib/tools/cli' );
var createElement = require( './../lib' );


// MAIN //

/**
* Main execution sequence.
*
* @private
*/
function main() {
	var flags;
	var opts;
	var cli;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( join( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line options:
	flags = cli.flags();

	// Extract options...
	opts = {};
	if ( flags[ 'class' ] ) {
		opts.className = flags[ 'class' ];
	}
	if ( flags.align ) {
		opts.align = flags.align;
	}
	if ( flags.raw ) {
		opts.raw = flags.raw;
	}
	if ( flags.label ) {
		opts.label = flags.label;
	}
	if ( flags.src ) {
		opts.src = flags.src;
	}
	if ( flags.alt ) {
		opts.alt = flags.alt;
	}
	console.log( createElement( opts ) ); // eslint-disable-line no-console
} // end FUNCTION main()

main();

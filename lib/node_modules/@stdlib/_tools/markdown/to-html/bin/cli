'use strict';

// MODULES //

var join = require( 'path' ).join;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var CLI = require( '@stdlib/cli/ctor' );
var stdin = require( '@stdlib/process/read-stdin' );
var stdinStream = require( '@stdlib/streams/node/stdin' );
var replace = require( '@stdlib/string/replace' );
var toHTML = require( './../lib' );


// MAIN //

/**
* Main execution sequence.
*
* @private
* @returns {void}
*/
function main() {
	var flags;
	var args;
	var cli;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( join( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line options:
	flags = cli.flags();
	if ( flags.help || flags.version ) {
		return;
	}

	// Get any provided command-line arguments:
	args = cli.args();

	// Check if we are receiving data from `stdin`...
	if ( !stdinStream.isTTY ) {
		return stdin( onRead );
	}
	if ( flags.base ) {
		toHTML( replace( args[ 0 ], /\\n/g, '\n' ), flags.base, done );
	} else {
		toHTML( replace( args[ 0 ], /\\n/g, '\n' ), done );
	}

	/**
	* Callback invoked upon reading from `stdin`.
	*
	* @private
	* @param {(Error|null)} error - error object
	* @param {Buffer} data - data
	* @returns {void}
	*/
	function onRead( error, data ) {
		if ( error ) {
			return done( error );
		}
		if ( flags.semver ) {
			toHTML( data.toString(), flags.semver, done );
		} else {
			toHTML( data.toString(), done );
		}
	}

	/**
	* Callback invoked on completion.
	*
	* @private
	* @param {(Error|null)} error - error object
	* @param {string} out - result
	* @returns {void}
	*/
	function done( error, out ) {
		if ( error ) {
			return cli.error( error );
		}
		console.log( out ); // eslint-disable-line no-console
	}
}

main();

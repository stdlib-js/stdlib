#!/usr/bin/env node
'use strict';

// MODULES //

var cwd = require( '@stdlib/process/cwd' );
var join = require( 'path' ).join;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var CLI = require( '@stdlib/tools/cli' );
var build = require( './../lib' );


// FUNCTIONS //

/**
* Callback invoked upon completion.
*
* @private
* @param {(Error|null)} error - error object
*/
function onFinish( error ) {
	if ( error ) {
		throw error;
	}
}


// MAIN //

/**
* Main execution sequence.
*
* @private
* @returns {void}
*/
function main() {
	var flags;
	var opts;
	var args;
	var root;
	var cli;
	var out;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( join( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line arguments:
	args = cli.args();

	// Get any provided command-line options:
	flags = cli.flags();

	opts = {};
	if ( flags.pattern ) {
		opts.pattern = flags.pattern;
	}
	if ( flags.bundle ) {
		opts.bundle = flags.bundle;
	}
	if ( flags.html ) {
		opts.html = flags.html;
	}
	if ( flags.mount ) {
		opts.mount = flags.mount;
	}
	if ( flags.title ) {
		opts.title = flags.title;
	}
	if ( flags.out ) {
		out = flags.out;
	} else {
		out = cwd();
	}
	if ( args[ 0 ] ) {
		root = args[ 0 ];
	} else {
		root = cwd();
	}
	build( root, out, opts, onFinish );
}

main();

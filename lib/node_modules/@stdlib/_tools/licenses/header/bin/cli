'use strict';

// MODULES //

var resolve = require( 'path' ).resolve;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var CLI = require( '@stdlib/cli/ctor' );
var trimRight = require( '@stdlib/string/right-trim' );
var licenseHeader = require( './../lib' );


// MAIN //

/**
* Main execution sequence.
*
* @private
* @returns {void}
*/
function main() {
	var flags;
	var opts;
	var cli;
	var out;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( resolve( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line options:
	flags = cli.flags();
	if ( flags.help || flags.version ) {
		return;
	}

	// Parse options...
	opts = {};
	if ( flags.year ) {
		opts.year = parseInt( flags.year, 10 );
	}
	if ( flags.copyright ) {
		opts.copyright = flags.copyright;
	}

	// Generate a license header:
	out = licenseHeader( flags.license, flags.type, opts );
	if ( out === null ) {
		return cli.error( new Error( 'unexpected error. Unable to generate a license header for the provided file type.' ) );
	}
	console.log( trimRight( out ) ); // eslint-disable-line no-console
}

main();

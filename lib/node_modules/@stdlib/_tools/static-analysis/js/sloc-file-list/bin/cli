'use strict';

// MODULES //

var resolve = require( 'path' ).resolve;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var CLI = require( '@stdlib/tools/cli' );
var stdin = require( '@stdlib/process/read-stdin' );
var RE_EOL = require( '@stdlib/regexp/eol' );
var isRegExpString = require( '@stdlib/assert/is-regexp-string' );
var reFromString = require( '@stdlib/utils/regexp-from-string' );
var analyze = require( './../lib' );


// MAIN //

/**
* Main execution sequence.
*
* @private
* @returns {void}
*/
function main() {
	var lines;
	var flags;
	var args;
	var opts;
	var sep;
	var cli;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( resolve( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line arguments:
	args = cli.args();

	// Get any provided command-line flags:
	flags = cli.flags();

	// Check if we are receiving data from `stdin`...
	opts = {};
	if ( flags.cumulative === false ) {
		opts.cumulative = flags.cumulative;
	}
	if ( !process.stdin.isTTY ) {
		if ( flags.split ) {
			if ( !isRegExpString( flags.split ) ) {
				flags.split = '/'+flags.split+'/';
			}
			sep = reFromString( flags.split );
		} else {
			sep = RE_EOL;
		}
		return stdin( onRead );
	}
	lines = args;
	analyze( lines, opts, done );

	/**
	* Callback invoked upon reading from `stdin`.
	*
	* @private
	* @param {(Error|null)} error - error object
	* @param {Buffer} data - data
	* @returns {void}
	*/
	function onRead( error, data ) {
		if ( error ) {
			process.exitCode = 1;
			return console.error( 'Error: %s', error.message ); // eslint-disable-line no-console
		}
		lines = data.toString().split( sep );
		if ( lines[ lines.length-1 ] === '' ) {
			lines = lines.slice( 0, lines.length-1 );
		}
		analyze( lines, opts, done );
	}

	/**
	* Callback invoked upon completing analysis.
	*
	* @private
	* @param {(Error|null)} error - error object
	* @param {(Object|NonNegativeIntegerArray)} results - analysis results
	* @returns {void}
	*/
	function done( error, results ) {
		var i;
		if ( error ) {
			process.exitCode = 1;
			return console.error( 'Error: %s', error.message ); // eslint-disable-line no-console
		}
		if ( opts.cumulative === false ) {
			// CSV header:
			console.log( 'file,sloc' ); // eslint-disable-line no-console

			// CSV columns:
			for ( i = 0; i < results.length; i++ ) {
				// Print as CSV, guarding against "odd" characters in file paths:
				console.log( '"'+lines[i]+'",'+results[i] ); // eslint-disable-line no-console
			}
		} else {
			console.log( JSON.stringify( results ) ); // eslint-disable-line no-console
		}
	}
}

main();

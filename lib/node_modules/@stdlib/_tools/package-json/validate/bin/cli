#!/usr/bin/env node
'use strict';

// MODULES //

var resolve = require( 'path' ).resolve;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var parseJSON = require( '@stdlib/utils/parse-json' );
var stdin = require( '@stdlib/process/read-stdin' );
var CLI = require( '@stdlib/tools/cli' );
var validate = require( './../lib' );


// MAIN //

/**
* Main execution sequence.
*
* @private
* @returns {void}
*/
function main() {
	var args;
	var json;
	var cli;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( resolve( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line arguments:
	args = cli.args();

	// Check if we are receiving data from `stdin`...
	if ( !process.stdin.isTTY ) {
		return stdin( onRead );
	}
	json = args[ 0 ];
	process.nextTick( next );

	/**
	* Callback invoked upon reading from `stdin`.
	*
	* @private
	* @param {(Error|null)} error - error object
	* @param {Buffer} data - data
	* @returns {void}
	*/
	function onRead( error, data ) {
		if ( error ) {
			console.error( 'Error: %s', error.message ); // eslint-disable-line no-console
			return cli.exit( 1 );
		}
		json = data.toString();
		next();
	}

	/**
	* Validates a `package.json`.
	*
	* @private
	* @returns {void}
	*/
	function next() {
		var bool;

		json = parseJSON( json );
		if ( json instanceof Error ) {
			console.error( 'Error: %s', json.message ); // eslint-disable-line no-console
			return cli.exit( 1 );
		}
		bool = validate( json );
		if ( bool ) {
			console.log( true ); // eslint-disable-line no-console
		} else {
			console.error( validate.errors ); // eslint-disable-line no-console
		}
	}
}

main();


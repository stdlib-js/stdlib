{
	"$id": "",
	"$schema": "http://json-schema.org/draft-06/schema#",
	"description": "Schema for package.json.",
	"type": "object",
	"definitions": {
		"semver": {
			"description": "semantic version",
			"type": "string",
			"pattern": "^\\d+\\.\\d+\\.\\d+"
		},
		"person": {
			"description": "author, contributor, or maintainer",
			"oneOf": [
				{
					"$ref": "#/definitions/person-object"
				}
			]
		},
		"person-object": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"pattern": "[a-zA-Z ]"
				},
				"email": {
					"$ref": "#/definitions/email"
				},
				"url": {
					"$ref": "#/definitions/uri-http"
				}
			},
			"required": [
				"name"
			]
		},
		"email": {
			"description": "email address",
			"type": "string",
			"pattern": "@"
		},
		"string-map": {
			"type": "object",
			"patternProperties": {
				".+": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"path": {
			"type": "string",
			"minLength": 1
		},
		"uri-http": {
			"type": "string",
			"pattern": "^https?:\/\/"
		},
		"uri-git": {
			"type": "string",
			"pattern": "^git:\/\/"
		},
		"repo-object": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"pattern": "[a-zA-Z]"
				},
				"url": {
					"oneOf": [
						{
							"$ref": "#/definitions/uri-http"
						},
						{
							"$ref": "#/definitions/uri-git"
						}
					]
				}
			},
			"additionalProperties": false,
			"required": [
				"type",
				"url"
			]
		},
		"license-object": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"pattern": "[a-zA-Z0-9 _\\-\\.]+"
				},
				"url": {
					"$ref": "#/definitions/uri-http"
				}
			},
			"additionalProperties": false,
			"required": [
				"type",
				"url"
			]
		},
		"keyword": {
			"type": "string",
			"pattern": "^[a-z0-9](?:[_\\.\\- ]?[a-z0-9]+)*$"
		},
		"operating-system": {
			"type": "string",
			"enum": [
				"aix",
				"darwin",
				"freebsd",
				"linux",
				"macos",
				"openbsd",
				"sunos",
				"win32",
				"windows"
			]
		},
		"dependency-map": {
			"$ref": "#/definitions/string-map"
		},
		"path-map": {
			"type": "object",
			"patternProperties": {
				".+": {
					"$ref": "#/definitions/path"
				}
			},
			"additionalProperties": false
		}
	},
	"properties": {
		"name": {
			"description": "package name",
			"type": "string",
			"pattern": "^@?[a-z](?:[-\\/]?[_a-z0-9]+)*$"
		},
		"version": {
			"description": "package version",
			"$ref": "#/definitions/semver"
		},
		"description": {
			"description": "package description",
			"type": "string",
			"minLength": 1
		},
		"license": {
			"description": "package license",
			"type": "string",
			"minLength": 1
		},
		"licenses": {
			"description": "package licenses",
			"type": "array",
			"items": {
				"$ref": "#/definitions/license-object"
			},
			"uniqueItems": true,
			"minItems": 1
		},
		"author": {
			"description": "package author",
			"$ref": "#/definitions/person"
		},
		"maintainers": {
			"description": "package maintainers",
			"type": "array",
			"items": {
				"$ref": "#/definitions/person"
			},
			"uniqueItems": true,
			"minItems": 1
		},
		"contributors": {
			"description": "package contributors",
			"type": "array",
			"items": {
				"$ref": "#/definitions/person"
			},
			"uniqueItems": true,
			"minItems": 1
		},
		"bin": {
			"description": "package executables",
			"$ref": "#/definitions/path-map"
		},
		"main": {
			"description": "main package entry point",
			"$ref": "#/definitions/path"
		},
		"browser": {
			"description": "main package entry point for a browser environment",
			"oneOf": [
				{
					"$ref": "#/definitions/path"
				},
				{
					"$ref": "#/definitions/path-map"
				}
			]
		},
		"unpkg": {
			"description": "main package entry point for the unpkg CDN",
			"$ref": "#/definitions/path"
		},
		"gypfile": {
			"description": "boolean instructing npm that a package is a binary addon that needs compiling and that npm should invoke node-gyp",
			"type": "boolean"
		},
		"types": {
			"description": "package TypeScript definitions",
			"$ref": "#/definitions/path"
		},
		"directories": {
			"description": "package directories",
			"type": "object",
			"properties": {
				"benchmark": {
					"$ref": "#/definitions/path"
				},
				"bin": {
					"$ref": "#/definitions/path"
				},
				"data": {
					"$ref": "#/definitions/path"
				},
				"doc": {
					"$ref": "#/definitions/path"
				},
				"example": {
					"$ref": "#/definitions/path"
				},
				"include": {
					"$ref": "#/definitions/path"
				},
				"lib": {
					"$ref": "#/definitions/path"
				},
				"man": {
					"$ref": "#/definitions/path"
				},
				"scripts": {
					"$ref": "#/definitions/path"
				},
				"src": {
					"$ref": "#/definitions/path"
				},
				"test": {
					"$ref": "#/definitions/path"
				}
			},
			"additionalProperties": false,
			"required": []
		},
		"scripts": {
			"description": "package scripts",
			"$ref": "#/definitions/string-map"
		},
		"homepage": {
			"description": "package homepage",
			"$ref": "#/definitions/uri-http"
		},
		"repository": {
			"description": "package repository",
			"$ref": "#/definitions/repo-object"
		},
		"repositories": {
			"description": "package repositories",
			"type": "array",
			"items": {
				"$ref": "#/definitions/repo-object"
			},
			"uniqueItems": true,
			"minItems": 1
		},
		"bugs": {
			"description": "bug reporting",
			"type": "object",
			"properties": {
				"url": {
					"$ref": "#/definitions/uri-http"
				}
			},
			"additionalProperties": false,
			"required": [
				"url"
			]
		},
		"dependencies": {
			"description": "package dependencies",
			"$ref": "#/definitions/dependency-map"
		},
		"devDependencies": {
			"description": "package development dependencies",
			"$ref": "#/definitions/dependency-map"
		},
		"engines": {
			"description": "supported engines",
			"$ref": "#/definitions/string-map"
		},
		"os": {
			"description": "supported operating systems",
			"type": "array",
			"items": {
				"$ref": "#/definitions/operating-system"
			},
			"uniqueItems": true
		},
		"keywords": {
			"description": "package keywords",
			"type": "array",
			"items": {
				"$ref": "#/definitions/keyword"
			},
			"uniqueItems": true
		},
		"__stdlib__": {
			"description": "project meta data",
			"type": "object",
			"properties": {
				"stability": {
					"description": "package stability",
					"type": "string"
				},
				"envs": {
					"description": "supported environments",
					"type": "object",
					"properties": {
						"node": {
							"type": "boolean"
						},
						"browser": {
							"type": "boolean"
						}
					}
				}
			},
			"required": []
		}
	},
	"required": [
		"name",
		"version",
		"description",
		"author",
		"contributors",
		"main",
		"scripts",
		"homepage",
		"repository",
		"bugs",
		"dependencies",
		"devDependencies",
		"engines",
		"license",
		"keywords"
	]
}
